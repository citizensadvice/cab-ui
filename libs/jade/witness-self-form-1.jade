block settings
	- var title = "Witness Service referral form"
	- var sidebar = true
	- var toolbars = false
	- var mockup = true

extends ../template/template.jade

block breadcrumbs
	+breadcrumbs([
		{title: "Home", href: "index.html"},
		{title: "Witness Service", href: "index.html#templates"},
		{title: "Referral form"}])

block content
	.articleContent
		div
			p The Witness Service supports witnesses who are giving evidence in criminal courts in England or Wales. Whether you are contacting us on behalf of a witness or you are a witness yourself, we can provide practical information and emotional support.

			p Please use this form to get in touch.  We will reply within two working days, usually by phone, in a call that last 10 to 20 minutes.

			fieldset
				legend(for="radio") Please select one of the following options
				label.radio.radio--block
					input(checked, name="radio", type="radio", value="option1")
					| I am a witness or I am making contact on behalf of a family member or friend who is a witness
				label.radio.radio--block
					input(disabled, name="radio", type="radio", value="option2")
					| I work for an organisation that is referring a witness


			a.btn.right-button-icon(href="witness-self-form-2.html") Start