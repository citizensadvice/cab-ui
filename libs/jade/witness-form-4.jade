block settings
	- var title = "Witness Service referral form"
	- var sidebar = true
	- var toolbars = false
	- var mockup = true

extends ../template/template.jade

block breadcrumbs
	+breadcrumbs([
		{title: "Home", href: "index.html"},
		{title: "Witness Service", href: "index.html#templates"},
		{title: "Referral form"}])

block content
	.articleContent
		div
			h2 The Witnessâ€™s contact details
			p Please only provide contact information that we can use to contact the witness.

			
			fieldset
				label(for="standardField") Email address
				input(id="standardField" placeholder="" type="text")

			fieldset
				label(for="standardField") Preferred phone number
				input(id="standardField" placeholder="" type="text")

			fieldset
				legend(for="radio") Can the Witness Service leave a message if there is no answer?
				label.radio.radio--inline
					input(name="radio", type="radio", value="option1")
					| Yes
				label.radio.radio--inline
					input(checked, name="radio", type="radio", value="option2")
					| No
			fieldset
				legend(for="radio") Can the Witness Service send a text?
				label.radio.radio--inline
					input(name="radio", type="radio", value="option1")
					| Yes
				label.radio.radio--inline
					input(checked, name="radio", type="radio", value="option2")
					| No
				
			.well--outline
				h3 Your address
				fieldset
					label.radio.radio--inline
						input(checked, name="radio", type="radio", value="option1")
						| Lookup address
					label.radio.radio--inline
						input(name="radio", type="radio", value="option2")
						| Enter address manually

				fieldset
					label(for="field") Enter your postcode
					.search-results__field.field-group.field-group--buttons
						input(type="search", placeholder="Enter postcode")
						button.btn.btn-primary Search&nbsp;&nbsp;
							i.icon-search


			a.btn-light.left-button-icon(href="witness-form-3.html") Back
			a.btn.right-button-icon(href="witness-form-5.html") Next