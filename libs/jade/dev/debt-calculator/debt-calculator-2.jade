block settings
	- var title = "Debt calculator"
	- var sidebar = true
	- var toolbars = true
	- var dir = "../../"

extends /template/template-site.jade

block breadcrumbs
	+breadcrumbs([
		{title: "Home", href: dir + "home.html"},
		{title: "Debt", href: dir + "#"},
		{title: title}])

block sidebar
	//include /template/sidebar-site-content.jade

block script
	script.
		var x = 0;
		$('#add-debt').click(function(){
			$('#debt-info').append('<div style="display:none;" class="well--outline"><div class="fieldset"><label for="standardField">Creditor\'s name<a class="remove-field remove u-pull-right">Remove</a></label><input id="standardField" placeholder="" type="text"></div><div class="fieldset"><label for="standardField">Total amount owed</label><input id="standardField" placeholder="" type="text"></div></div>');
			$('#debt-info').find('.well--outline:last').slideDown('fast');
			x++;
		});

block content
	.articleContent
		table
			thead
				tr
					th(scope="col") Creditor
					th(scope="col") Suggested repayments
			tbody
				tr
					td Creditor one
					td £XX.XX
				tr
					td Creditor two
					td £XX.XX

		a.btn.restart-button-icon(href="debt-calculator.html") Restart
