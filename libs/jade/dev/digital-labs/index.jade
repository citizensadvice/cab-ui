block settings
	- var title = "Welcome to the digital lab"
	- var dir = "../../"

extends /template/template.min.jade

block head
	style.
		body {
			background-color: #c2bdde;
		}

block script
	script.
		$(document).ready(function() {
			$('#webchat').click(function(){
				$('#overlay').show();
			})
			$('.dialog__close').click(function(){
				$('#overlay').hide();
			})
		});

