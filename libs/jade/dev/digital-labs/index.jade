		body {
			background-color: #c2bdde;
		}

block script
	script.
		$(document).ready(function() {
			$('#webchat').click(function(){
				$('#overlay--1').show();
			})
			$('.dialog__close.1').click(function(){
				$('#overlay--1').hide();
			})
			$('#advice').click(function(){
				$('#overlay--2').show();
			})
			$('.dialog__close.2').click(function(){
				$('#overlay--2').hide();
			})
		});

