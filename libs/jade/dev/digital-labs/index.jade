block settings
	- var title = "Welcome to the digital lab"
	- var dir = "../../"

extends /jade/templates/template.min.jade

block head
	style.
		.dl--circle{
			height: 6rem;
			width: 6rem;
			border-radius: 3rem;
		}

		.dl--circle .pic{
			font-size:4rem;
		}

		.webchat{
			margin-left:13%;
		}

		.flex-row > *{
			text-align:center;
		}

		.fullwidth-content{
			padding:4rem 4rem 2rem;
		}
		.links{
			margin-top:4rem;
		}
		.sponser{
			text-align: right;padding: 0 2em;padding-top: 2em;
		}
		.freshworks{
			    height: 50px;margin-left: 15px;position: relative;top: 20px;
		}
		.casebook-container span{
			margin:0;
			font-size:22px;
			text-align:left;
			font-weight:bold;
			color:#00553F;
			clear: both;
			float: left;
			margin-bottom:1em;
		}

		.casebook-container p{
			clear: both;
			float: left;
			width: 50%;
			text-align: left;
			color:#00553F;
			word-break: break-word;
			margin:0;
		}

		.casebook-container a.case-btn{
			    clear: both;
				float: left;
				width: 180px;
				font-size: 17px;
				background: white;
				margin-top: 2em;
				line-height: 3em;
				font-weight: 600;
		}


		.casebook-container{
			padding: 0em 1em 2em;
			margin: 0;
		}

