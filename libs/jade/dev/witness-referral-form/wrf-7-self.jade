block settings
    - var title = "Get help from the Witness Service"
    - var sidebar = true
    - var toolbars = false
    - var mockup = true
    - var dir = "../../"

extends /jade/templates/template.jade

block breadcrumbs
    +breadcrumbs([
        {title: "Home", href: "#"},
        {title: "Witness Service", href: "#"},
        {title: "Get help from the Witness Service"}])

block content
    .articleContent
        div
            h2 Any other information
            fieldset
                label(for="other-info") Is there anything else you’d like the Witness Service to know?
                    span.optional  (optional)
                span.form-hint For example, if you’d like them to call different numbers at different times of day.
                textarea(id="other-info" rows="3")

            a.btn.left-button-icon(href="wrf-6-self.html") Back
            a.btn.right-button-icon(href="wrf-8-self.html") Next