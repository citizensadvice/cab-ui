block settings
    //- var title = "Get help from the Witness Service"
    - var sidebar = true
    - var toolbars = false
    - var mockup = true
    - var dir = "../../"

extends /jade/templates/template.jade

block breadcrumbs
    +breadcrumbs([
        {title: "Home", href: "#"},
        {title: "Witness Service", href: "#"},
        {title: "Get help from the Witness Service"}])

block script
    script.
        $(document).ready(function() {
            $('.conditional').click(function() {
                if( $(this).find('input[value="1"]').is(':checked')) {
                    $(this).next().show();
                } else {
                    $(this).next().hide();
                }
            });
        });

block content
    .articleContent
        div
            h2 Your contact details
            fieldset.conditional
                label(for="phone-safe") Safe to phone?
                label.radio.radio--inline
                    input(name="phone-safe" type="radio" value="1")
                    | Yes
                label.radio.radio--inline
                    input(name="phone-safe" type="radio" value="2")
                    | No

            div.conditional--fields(style="display: block;")
                fieldset
                    label(for="phone") Phone number
                    input(id="phone" type="number")
            

            a.btn.left-button-icon(href="wrf-3-self.html") No
            a.btn.right-button-icon(href="wrf-5-self.html") Yes