block settings
    - var title = "Create template letter"
    - var fullwidth = true
    - var mockup = true
    - var dir = "../../../"

extends /template/template.jade

block script
    script.
        $(document).ready(function() {
            $('.conditional').click(function() {
                if( $(this).find('input[value="2"]').is(':checked')) {
                    $(this).next().show();
                } else {
                    $(this).next().hide();
                }
            });

            $('.tl--toggle').click(function() {
                $(this).toggleClass('tl--hidden').next().toggle();
            })
        });

block breadcrumbs
    +breadcrumbs([
        {title: "Home", href: "#"}])

block content
