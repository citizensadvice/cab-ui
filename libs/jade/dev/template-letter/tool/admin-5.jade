block settings
    - var title = "Create template letter"
    - var fullwidth = true
    - var mockup = true
    - var dir = "../../../"

extends /template/template.jade

block script
    script.
        $(document).ready(function() {
            $('.conditional').click(function() {
                if( $(this).find('input[value="2"]').is(':checked')) {
                    $(this).next().show();
                } else {
                    $(this).next().hide();
                }
            });

            $('.tl--toggle').click(function() {
                $(this).toggleClass('tl--hidden').next().toggle();
            })
        });

block breadcrumbs
    +breadcrumbs([
        {title: "Home", href: "#"}])

block content
    .articleContent
        .flex-container.flex-row
            .col-md-6
                a.btn-white.back-button-icon(href="admin-3.html", style="margin-top:0;") Back to overview

                .well(style="background-color:#F2F8FF;")
                    .fieldset
                        label(for="standardField") Section title
                        input(value="Personal details", type="text")

                a.blocklink.moveme(href="admin-radio.html") Name
                    br
                    | {{name}}
                    br
                    small(style="color:black;") Radio

                a.blocklink.moveme(href="admin-checkbox.html") Checkbox
                    br
                    | {{check}}
                    br
                    small(style="color:black;") Checkbox

                a.blocklink.moveme Untitled question
                    br
                    | {{question1}}
                    br
                    small(style="color:black;") Dropdown


                .well
                    label(for="standardField") Question type
                    .dropdown
                        select#exampleSelect1
                            option Address
                            option Checkbox
                            option Date
                            option Dropdown
                            option Email
                            option Input
                            option Number
                            option Phone
                            option Radio
                            option Text area
