block settings
	- var title = "Letter to complain about faulty goods"
	- var sidebar = true
	- var mockup = true
	- var dir = "../../"

extends /template/template.jade

block script
	script.
		var x = ($('#letter').width())*1.3;
		$('#letter div').css({'min-height':x+'px'});
		$(window).resize(function() {
			var x = ($('#letter').width())*1.3;
			$('#letter div').css({'min-height':x+'px'});
		});

		$(document).ready(function() {
			$('.conditional').click(function() {
				if( $(this).find('input[value="2"]').is(':checked')) {
					$(this).next().show();
				} else {
					$(this).next().hide();
				}
			});
		});


block content
	.articleContent
		p Use this letter template to complain to a trader about faulty goods. It should help the trader understand your point of view and their legal obligation to sort out the problem.

		p You can send the letter by post or copy the text into an email. If youâ€™d prefer to talk to the trader on the phone or in person you could read it out to them.

		p Before you use this template, make sure you read our advice on how to return faulty goods.

		.well--outline
			.letter-steps
				p Step 1 of 4

			h2 Letter to complain about faulty goods
			//h3 Before you start
			p Below is an example of what your letter will look like.

			button.btn.right-button-icon(type="button") Start

			#letter
				.letter-content
					p
					| 1 High Street
					br 
					| New Town
					br
					| New City
					br
					| A1 1AA

					p
					| Please accept this communication as instructions to remove the above address from receiving all unaddressed items.
					p
					| I understand that I may miss information from local or national government or other publications that are sent using this service.

					p
					| Joe Blogs
					p joe@joeblogs.com


		.well--outline
			.letter-steps
				p Step 2 of 4

			//h2 Letter to complain about faulty goods
			h2 Your details

			.fieldset
				label(for="yourName") Your name
				input#standardField(placeholder="", type="text")

			.fieldset
				label(for="yourAddress") Your address
					span.optional &nbsp;(optional)
				textarea#yourAddress(rows="4")


			a.btn-light.left-button-icon(href="post-tool-2.html") Back
			button.btn.right-button-icon(type="button") Continue

		.well--outline
			.letter-steps
				p Step 3 of 4

			//h2 Letter to complain about faulty goods
			h2 Traders details

			.fieldset
				label(for="traderName") Trader's name
				input#standardField(placeholder="", type="text")

			.fieldset
				label(for="traderAddress") Trader's address
					span.optional &nbsp;(optional)
				textarea#yourAddress(rows="4")


			a.btn-light.left-button-icon(href="post-tool-2.html") Back
			button.btn.right-button-icon(type="button") Continue


		.well--outline
			.letter-steps
				p Step 4 of 4

			//h2 Letter to complain about faulty goods
			h2 About the goods

			.fieldset
				label(for="goods") What are the goods?
				input#standardField(placeholder="", type="text")

			.form-group-date
				legend When did you buy the goods?
				fieldset
					label(for="dob-day")
						span.screenreader When did you buy your car? Date field,
						| Day
					input#dob-day(placeholder="DD", maxlength="2", min="1", max="31",  name="day", type="number", pattern="\d{1,2}", autoComplete="off")
				fieldset
					label(for="dob-month") Month
					input#dob-month(placeholder="MM", maxlength="2", min="1", max="12", name="month", type="number", pattern="\d{1,2}", autoComplete="off")
				fieldset
					label(for="dob-year") Year
					input#dob-year(placeholder="YYYY", maxlength="4",  min="1900", max="2100", name="year", type="number", pattern="\d{4}", autoComplete="off")

			.fieldset
				label(for="yourName") Price of goods
				input#standardField(placeholder="", type="text")

			a.btn-light.left-button-icon(href="post-tool-2.html") Back
			button.btn.right-button-icon(type="button") Continue



		.well--outline
			.letter-steps
				p Step 4 of 4

			//h2 Letter to complain about faulty goods
			h2 About the problem

			fieldset.conditional
				label(for="conditional-two") What's wrong with the goods?
				label.checkbox.checkbox--block
					input(name="conditional-two", type="checkbox", value="1")
					| Not of satisfactory quality
				label.radio.radio--block
					input(name="conditional-two", type="checkbox", value="1")
					| Not fit for purpose
				label.radio.radio--block
					input(name="conditional-two", type="checkbox", value="1")
					| Do not match the description
				label.radio.radio--block
					input(name="conditional-two", type="checkbox", value="2")
					| Other reason
			.conditional--fields
				fieldset
					textarea#yourAddress(rows="4")

			fieldset.conditional
				label(for="conditional-two") What are you asking for?
				label.radio.radio--block
					input(name="conditional-two", type="radio", value="1")
					| Ask for a refund
				label.radio.radio--block
					input(name="conditional-two", type="radio", value="1")
					| Ask for a replacement
				label.radio.radio--block
					input(name="conditional-two", type="radio", value="1")
					| Ask for a repair
				label.radio.radio--block
					input(name="conditional-two", type="radio", value="1")
					| Ask for a discount
				label.radio.radio--block
					input(name="conditional-two", type="radio", value="2")
					| Ask for compensation
			.conditional--fields
				label(for="yourName") Amount of compensation requested
				input#standardField(placeholder="", type="text")


			a.btn-light.left-button-icon(href="post-tool-2.html") Back
			button.btn.right-button-icon(type="button") Complete



		.well--outline
			.letter-steps
				//p Step 4 of 4

			//h2 Letter to complain about faulty goods
			h2 Your template letter
			p You can print, which will allow you to also save as a pdf, email the letter to yourself as a text file, so you can edit and send or print and post.

			button.btn-secondary.email-button-icon(type="button") Email
			button.btn-secondary.print-button-icon(type="button") Print

