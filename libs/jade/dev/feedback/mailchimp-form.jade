// Mailchimp signup form for use on the blog
// Use mailchimps _naked form_ html version but restructure to use our form structure http://citizensadvice.github.io/cab-ui/forms/field-groups.html

block settings
	- var title = "How to fill in your PIP claim form"
	- var sidebar = true
	- var toolbars = true
	- var dir = "../../"
	- var blogname = "Digital Blog"
	- var blog = true
	- var feedback = true

extends /jade/templates/template-site.jade

block breadcrumbs
	+breadcrumbs([
		{title: "Get advice", href: dir + "navigation.html"},
		{title: "Benefits", href: dir + "#"},
		{title: "PIP"}])

block content
	// Begin MailChimp Signup Form
	#mc_embed_signup
		form#mc-embedded-subscribe-form.validate(action='//citizensadvice.us10.list-manage.com/subscribe/post?u=e2588e5c37c40da4b097bab2c&id=51f24d8b90', method='post', name='mc-embedded-subscribe-form', target='_blank', novalidate='')
			#mc_embed_signup_scroll
				h2 Join our mailing list for research and testing
				.fieldset
					.mc-field-group
						label(for='mce-MMERGE4') Name 
						input#mce-MMERGE4.required(type='text', value='', name='MMERGE4')
				.fieldset
					.mc-field-group
						label(for='mce-MMERGE5') Role 
						input#mce-MMERGE5.required(type='text', value='', name='MMERGE5')
				.fieldset
					.mc-field-group
						label(for='mce-EMAIL') Email address 
						input#mce-EMAIL.required.email(type='email', value='', name='EMAIL')
				.fieldset
					.mc-field-group
						label(for='mce-MMERGE3') Local Citizens Advice 
						input#mce-MMERGE3.required(type='text', value='', name='MMERGE3')
				.mc-field-group.input-group
					.fieldset
						legend I would like to test 
						ul.li--no-style
							li.li--no-style
								.fieldset
									label.radio.radio--block(for='mce-MMERGE2-0')
										input#mce-MMERGE2-0(type='radio', value='Casebook', name='MMERGE2')
										| Casebook
							li.li--no-style
								.fieldset
									label.radio.radio--block(for='mce-MMERGE2-1')
										input#mce-MMERGE2-1(type='radio', value='Online advice content', name='MMERGE2')
										| Online advice content
							li.li--no-style
								.fieldset
									label.radio.radio--block(for='mce-MMERGE2-2')
										input#mce-MMERGE2-2(type='radio', value='Both', name='MMERGE2')
										| Both
				#mce-responses.clear
					#mce-error-response.response(style='display:none')
					#mce-success-response.response(style='display:none')
				// real people should not fill this in and expect good things - do not remove this or risk form bot signups
				div(style='position: absolute; left: -5000px;', aria-hidden='true')
					input(type='text', name='b_e2588e5c37c40da4b097bab2c_51f24d8b90', tabindex='-1', value='')
				.clear
					input#mc-embedded-subscribe.button(type='submit', value='Subscribe', name='subscribe')
	// End mc_embed_signup
