block settings
	- var title = "Legislation"
	- var logoutheader = true
	- var sidebar = true
	- var toolbars = true
	- var toolbarsadviser = true
	- var dir = "../../"

extends /template/template.jade

block section-notice
	aside.section-notice
		h2.screenreader Notice
		.section-notice__content
			p
				span.badge NEW
				| This page is part of #[a(href="#") our new approach to digital advice].

	aside.section-notice__adviser
		h2.screenreader Notice
		.section-notice__content
			p
				span.badge ADVISER
				| This page is part of #[a(href="#") adviser only] content.

block breadcrumbs
	+breadcrumbs([
		{title: "Home", href: dir + "index.html"},
		{title: "Templates", href: dir + "index.html#templates"},
		{title: "Adviser content â€“ Legislation"}])

block sidebar
	- var section = "Section title"
	// Set the number at the end to the array position of the active page
	+sidebar([
		{title: "Content page", href: "adviser.html"},
		{title: "Advice tool", href: "adviser-tool.html"}])

	nav.side-nav-beta.adviser-nav
