block settings
	- var title = "Find out if you’re responsible for paying an energy bill"
	- var sidebar = true
	- var toolbars = true
	- var mockup = true
	- var dir = "../"

extends /template/template.jade

block breadcrumbs
	+breadcrumbs([
		{title: "Home", href: dir + "index.html"},
		{title: "Find out if you’re responsible for paying an energy bill"}])

block sidebar
	- var section = "Section title"
	// Set the number at the end to the array position of the active page
	+sidebar([
		{title: "Sibling page 1"},
		{title: "Sibling page 2"}],
		0)

block content
	.articleContent
		p Answer some questions to find out if you're responsible for paying a gas or electricity bill you've received.

		.response
			.response--q Do you own or rent your home?
			.response--a
				a.btn-light.btn-small Tenant
		.response
			.response--q Are you named on the bill?
			.response--a
				a.btn-light.btn-small No

		fieldset
			legend(for="radio") Is one of the people you live (or lived) with named on the bill?
			label.radio.radio--block
				input(name="radio", type="radio", value="option1")
				| Yes
			label.radio.radio--block
				input(name="radio", type="radio", value="option2")
				| No
			label.radio.radio--block
				input(name="radio", type="radio", value="option3")
				| Not sure

		a.btn.right-button-icon(href="calculator-2.html" type="button") Next
