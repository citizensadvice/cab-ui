block settings
	- var title = "Your prioritised debts"
	- var sidebar = true
	- var toolbars = false
	- var dir = "../../"

extends /template/template-site.jade

block breadcrumbs
	+breadcrumbs([
		{title: "Home", href: dir + "home.html"},
		{title: "Debt", href: dir + "#"},
		{title: "Your prioritised debts"}])

block sidebar
	//include /template/sidebar-site-content.jade

block content
	.articleContent
		p The list of debts you selected has been prioritised into order of importance based on the severity of consequences.
		//p We still recommend you look through each individual debt and follow the steps involved.

		table
			thead
				tr
					th(scope="col") Priority Debt
					th(scope="col") What you need to do first
			tbody
				tr
					td Council tax
					td Talk to your council straight away
				tr
					td Mortgage payments
					td Talk to your mortgage lender straight away
				tr
					td Court fines
					td Talk to the court fines officer straight away
			thead
				tr
					th(scope="col") Non-Priority Debt
					th(scope="col") What you need to do first
			tbody
				tr
					td Gas or electricity
					td Talk to your supplier

	a.button.btn-secondary.restart-button-icon(href="prioritise-debts.html") Restart


	.callout--related
		h3 Further help
		p If you'd prefer to talk to someone call our Adviceline on 0300 330 1313. Calls to this service cost the same as calling 01 and 02 numbers