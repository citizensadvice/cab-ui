block settings
	- var mockup = true
	- var sidebar = true
	//- var toolbars = true
	- var title = "Search"
	- var dir = "../../"

extends /jade/templates/template.jade

block breadcrumbs
	+breadcrumbs([
		{title: "England"},
		{title: "Home", href: dir + "index.html"},
		{title: "Search"}])
	
block sidebar
	include /jade/dev/search/sidebar-search.jade
	
block content
	.articleContent
		style.
			@media (max-width: 600px) {
				.field-group.field-group--buttons .btn {
				        width: 40%;
				        display: inline-block;
				        margin-left: -40%;
				        border-width: 2px;
				        border-radius: 0;
				        }
			}

		div
			//-h1.page-title.search Search
			.search-results__input(role="search")
				label.screenreader Search
				form
					fieldset
						.field-group.field-group--buttons
							input#field(type="search", placeholder="Search again", value="benefits")
							button.btn.search-button-icon(type="submit") Search
						p Search for advice
						.invalid An error was encountered. Please try searching again later.
			.search-title Showing results for #[strong Do I qualify for benefits in the UK]
			.term-suggestion Search instead for #[a bnefits]
			//h2.search-title Showing results for #[strong benefits]
			//p.search-spellcheck Search instead for #[a bnefits]
			ul.search-results

				li
					h3
						a Benefits
					p.description Overview and content list for #[strong benefits].
					//- ul.section
						li In:
						li #[a Benefits]
					//-.adviser-categories
						ul(style="margin:0")
							li #[a Benefits fact sheets]
							li #[a Universal Credit]
							li #[a Help if on a low income]
							li(style="margin:0") #[a Making welfare work locally]

				li
					h3
						a Benefits advice in BSL
					p.description Find out about #[strong benefits] you may be able to get, how to claim them and the help you can get from a Citizens Advice Bureau. Information in British Sign Language (BSL).
					ul.section
						li In:
						li #[a Benefits]

				li
					h3
						a Benefits changes timeline
					p.description Timeline showing which #[strong benefits] are changing and when.
					ul.section
						li In:
						li #[a Benefits]
						li #[a Changes to Welfare benefits]

				li
					h3
						a Young people and benefits
					p.description Information on #[strong benefits] for young people between the ages of 14 and 18.
					ul.section
						li In:
						li #[a Benefits]
						li #[a Children and young people]

				li
					h3
						a Benefits for older people
					p.description Information on #[strong Benefits] for people over 60 including retirement pension, pension credit, winter fuel payments and Christmas bonus.
					ul.section
						li In:
						li #[a Benefits]
						li #[a Older people]

				li
					h3
						a Disability discrimination and welfare benefits
					p.description Explains how service providers must not discriminate against you, when you are claiming or receiving #[strong benefits].
					ul.section
						li In:
						li #[a Consumer]
						li #[a Discrimination in goods and services]
						li #[a Services provided by a public authority]
						li #[a Common situations]

				li
					h3
						a Croatian nationals - claiming benefits
					p.description Rights of Croatian nationals and the habitual residence test.
					ul.section
						li In:
						li #[a Benefits]
						li #[a Coming from abroad and claiming benefits]
						li #[a EEA nationals]

				li
					h3
						a National insurance â€“ contributions and benefits
					p.description Information on national insurance contributions including classes of contributions, contribution conditions for #[strong benefits] and how to get a national insurance number.
					ul.section
						li In:
						li #[a Benefits]
						li #[a Benefits - introduction]

				li
					h3
						a Benefits for families and children
					p.description #[strong Benefits] for pregnant women and parents, including maternity allowance, maternity grants, child benefit and child trust fund.
					ul.section
						li In:
						li #[a Benefits]
						li #[a Children and young people]
				
				li
					h3
						a Benefits for people in work
					p.description Information on #[strong benefits] and other help you may be entitled to.
					ul.section
						li In:
						li #[a Benefits]
						li #[a  In work or looking for work]

			.pagination
					ul
						li.active
							span 1
						li #[a(href="#") 2]
						li #[a(href="#") 3]
						li #[a(href="#") Next]
						li #[a(href="#") Last]

					//-li.pagination
