	script(src="#{dir}js/sorttable.js")
	script.
		$(document).ready(function() {
			$('.open-dialog1').click(function(){
				$('#overlay1').show();
			})
			$('.dialog__close.1').click(function(){
				$('#overlay1').hide();
			})
			$('.open-dialog2').click(function(){
				$('#overlay2').show();
			})
			$('.dialog__close.2').click(function(){
				$('#overlay2').hide();
			})
			$('.open-dialog3').click(function(){
				$('#overlay3').show();
			})
			$('.dialog__close.3').click(function(){
				$('#overlay3').hide();
			})

			$(".complaints").each(function() {
				var score = parseInt($(this).text().trim());
				if (score >= 0 && score <= 50) {
					$(this).addClass("rate-5").html(5);
				} else if (score > 50 && score <= 100) {
					$(this).addClass("rate-4").html(4);
				} else if (score > 100 && score <= 350) {
					$(this).addClass("rate-3").html(3);
				} else if (score > 350 && score <= 550) {
					$(this).addClass("rate-2").html(2);
				} else if (score > 550) {
					$(this).addClass("rate-1").html(1);
				}
			})

			$(".service").each(function() {
				var score = parseInt($(this).text().trim());
				if (score > 0 && score <= 49) {
					$(this).addClass("rate-1").html(1);
				} else if (score > 50 && score <= 59) {
					$(this).addClass("rate-2").html(2);
				} else if (score > 60 && score <= 69) {
					$(this).addClass("rate-3").html(3);
				} else if (score > 70 && score <= 74) {
					$(this).addClass("rate-4").html(4);
				} else if (score > 74) {
					$(this).addClass("rate-5").html(5);
				}
			})

			$(".billing").each(function() {
				var score = parseInt($(this).text().trim());
				if (score > 0 && score <= 49) {
					$(this).addClass("rate-1").html(1);
				} else if (score > 50 && score <= 59) {
					$(this).addClass("rate-2").html(2);
				} else if (score > 60 && score <= 69) {
					$(this).addClass("rate-3").html(3);
				} else if (score > 70 && score <= 74) {
					$(this).addClass("rate-4").html(4);
				} else if (score > 74) {
					$(this).addClass("rate-5").html(5);
				}
			})

			$(".switching").each(function() {
				var score = parseInt($(this).text().trim());
				if (score > 0 && score <= 49) {
					$(this).addClass("rate-1").html(1);
				} else if (score > 50 && score <= 74) {
					$(this).addClass("rate-2").html(2);
				} else if (score > 74 && score <= 94) {
					$(this).addClass("rate-3").html(3);
				} else if (score > 94 && score <= 99) {
					$(this).addClass("rate-4").html(4);
				} else if (score >= 100) {
					$(this).addClass("rate-5").html(5);
				}
			})

			$(".commitment").each(function() {
				var score = parseInt($(this).text().trim());
				if (score == 0) {
					$(this).addClass("rate-1");
				} else if (score > 0 && score <= 1) {
					$(this).addClass("rate-1").html(1);
				} else if (score > 1 && score <= 2) {
					$(this).addClass("rate-2").html(2);
				} else if (score > 2 && score <= 3) {
					$(this).addClass("rate-3").html(3);
				} else if (score > 3 && score <= 4) {
					$(this).addClass("rate-4").html(4);
				} else if (score > 4) {
					$(this).addClass("rate-5").html(5);
				}
			})

			$(".rating").each(function() {
				var score = parseInt($(this).text().trim());
				if (score > 0 && score < 2) {
					$(this).find('span').addClass("rate-1--badge");
				} else if (score > 1 && score < 3) {
					$(this).find('span').addClass("rate-2--badge");
				} else if (score > 2 && score < 4) {
					$(this).find('span').addClass("rate-3--badge");
				} else if (score > 3 && score < 5) {
					$(this).find('span').addClass("rate-4--badge");
				} else if (score > 4 && score < 6) {
					$(this).find('span').addClass("rate-5--badge");
				}
			})

			$(".modern .rating").each(function() {
				var score = parseInt($(this).text().trim());
				if (score > 0 && score < 2) {
					$(this).addClass("rate-1--cell");
				} else if (score > 1 && score < 3) {
					$(this).addClass("rate-2--cell");
				} else if (score > 2 && score < 4) {
					$(this).addClass("rate-3--cell");
				} else if (score > 3 && score < 5) {
					$(this).addClass("rate-4--cell");
				} else if (score > 4 && score < 6) {
					$(this).addClass("rate-5--cell");
				}
			})
		});

