block settings
	- var title = "Content index"
	- var mockup = true

extends ../template/template.jade

block breadcrumbs
	+breadcrumbs([
		{title: "Home", href: "index.html"},
		{title: "Templates", href: "index.html#templates"},
		{title: "Content index"}])

block sidebar
	- var section = "Section title"
	// Set the number at the end to the array position of the active page
	+sidebar([
		{title: "Sibling page 1"},
		{title: "Sibling page 2"}],
		0)

block script
	style.
		h1.title__heading { display: none !important; }

block section-notice
	aside.section-notice
		h2.screenreader Notice
		.section-notice__content
			p
				span.badge NEW
				| This page is part of #[a(href="#") our new approach to digital advice].

	.content__header
		.content__header__content
			.title
				h1.page-title Consumer

			.index-intro
			p Contact the Citizens Advice consumer helpline on #[strong 03454 04 05 06] if you need help - a trained adviser can give you advice over the phone.</p>
			p #[strong] Consumer Rights Act
				| Find out about the #[a(href="/about-us/how-citizens-advice-works/citizens-advice-consumer-work/the-consumer-rights-act-2015/") Consumer Rights Act 2015] and what's changed.

