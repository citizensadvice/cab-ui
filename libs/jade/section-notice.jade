block settings
	- var title = "Section Notices"

extends ../template/template.jade

block breadcrumbs
	+breadcrumbs([
		{title: "Home", href: "index.html"},
		{title: "Modules", href: "index.html#modules"}, 
		{title: "Section Notices"}])

block section-notice
	aside.section-notice
		h2.screenreader Notice
		.section-notice__content
			p
				span.badge NEW
				| This page is part of #[a(href="#") our new approach to digital advice].

	aside.section-notice__adviser
		h2.screenreader Notice
		.section-notice__content
			p
				span.badge ADVISER
				| This page is part of #[a(href="#") adviser only] content.

block content
	.articleContent.row
		.span8
			p Section notices appear between the breadcrumbs and page content.

			.example-box-plain
				aside.section-notice
					h2.screenreader Notice
					.section-notice__content
						p
							span.badge NEW
							| This page is part of #[a(href="#") our new approach to digital advice].
