block settings
	- var title = "Stop receiving junk mail"
	- var sidebar = true
	- var toolbars = false
	- var mockup = true

extends ../template/template.jade

block breadcrumbs
	+breadcrumbs([
		{title: "Home", href: "index.html"},
		{title: "Templates", href: "index.html#templates"},
		{title: "Content"}])

block content
	.articleContent
		div
			p You'll need to contact three organisations to stop getting junk mail.
			p This tool will email them all for you in one go.
			p You can also remove your details from the 'open register' - a list of addresses that can be used for sending junk mail.
			p You'll need to post or email a letter to your local electoral office to be removed from the register - we'll create one for you to download.
			fieldset
				legend(for="checkbox") Who would you like to contact?
				label.checkbox.checkbox--block
					input(name="checkbox", type="checkbox")
					p
						span Royal Mail Door to Door
						br
						| This will stop Royal Mail from delivering junk mail to your address.
				label.checkbox.checkbox--block
					input(name="checkbox", type="checkbox")
					p
						span Direct Marketing Association’s ‘Your Choice’ scheme
						br
						| This will reduce the amount of junk mail you receive.
				label.checkbox.checkbox--block
					input(name="checkbox", type="checkbox")
					p
						span Mailing Preference Service
						br
						| You'll stop receiving junk mail that's addressed to you.
				label.checkbox.checkbox--block
					input(name="checkbox", type="checkbox")
					p
						span Your local electoral registration office
						br
						| Organisations won't be able to access your address to send you junk mail.

			a.btn.right-button-icon(href="post-tool-2.html") Start