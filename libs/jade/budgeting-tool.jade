block settings
    - var title = "Budgeting Tool"
    //- var sidebar = true
    //- var toolbars = true
    //- var cookiemonster = true
    - var mockup = true

extends ../template/template.jade

block breadcrumbs
    +breadcrumbs([
        {title: "Home", href: "index.html"}, 
        {title: "Templates", href: "index.html#templates"},
        {title: "Budgeting Tool"}])

block sidebar
    - var section = "Nav"
    +sidebar([
        {title: "Budgeting Tool"}
        ],0)

block section-notice
    aside.section-notice
        h2.screenreader Notice
        .section-notice__content
            p #[span.badge NEW] This page is part of #[a(href="#") our new approach to digital advice].
                
block content
    .articleContent
        .main-content__right
            h2(style="margin-top: 0;") 2. Benefits

            fieldset
                label(for="income") Income support
                    a(href="#", style="color:red;border-color:currentColor;float:right;") Remove
                .field-group.field-group--dropdown
                    input#income(placeholder="£", type="number")
                    .dropdown
                        select#exampleSelect1
                            option Weekly
                            option Monthly
                            option Yearly

            fieldset
                label(for="income") Tax credit
                    a(href="#", style="color:red;border-color:currentColor;float:right;") Remove
                .field-group.field-group--dropdown
                    input#income(placeholder="£", type="number")
                    .dropdown
                        select#exampleSelect1
                            option Weekly
                            option Monthly
                            option Yearly

            fieldset
                label(for="addbenefit") Add another benefit
                .group.well
                    .field
                        .dropdown(style="width:100%;")
                            select#exampleSelect1
                                option Housing benefit
                                option Child benefit
                                option Disability Living Allowance
                                option Incapacity Benefit
                                option Jobseeker's Allowance
                                option Council Tax Benefit
                                option Statutory Maternity Pay
                                option Carer's Allowance
                    .function
                        button.btn.btn-success.plus-button-icon(type="button") Add

            button.btn.btn-primary-light.left-button-icon(type="button") Income
            button.btn.btn-primary.right-button-icon(type="button") Household

            ul
                li.side-nav-beta__heading.-active.-open
                    a
                        span Budgeting tool
                li
                    ul
                        li.side-nav-beta__sibling.-visited
                            a(href="#") Start
                        li.side-nav-beta__sibling.-visited
                            a(href="#") 1. Income
                        li.side-nav-beta__sibling.-current
                            a(href="#") 2. Benefits
                        li.side-nav-beta__sibling
                            a(href="#") 3. Household