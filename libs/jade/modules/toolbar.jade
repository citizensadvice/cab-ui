block settings
	- var title = "Content toolbar"
	- var sidebar = true
	//- var toolbars = true
	//- var toolbarsadviser = true
	//- var sharebar = true
	- var dir = "../"

extends /template/template.jade

block breadcrumbs
	+breadcrumbs([
		{title: "Home", href: dir + "index.html"},
		{title: "Modules", href: dir + "index.html#Modules"},
		{title: "Content toolbar"}])

block sidebar
	include /template/sidebar-modules.jade

block content
	.articleContent
		p The content toolbars sandwich the content of the page, sitting below the page heading and above the footer.
		p The top toolbar contains important page information;
		ul
			li Extent switcher
			li Print button
			li Reference button (to open the reference window)
			li Extent, this is an admin only function that shows what extent the page was written for
			li Reviewed, who/when the article was last reviewed
			li Owner, who the page owner is
		p The bottom toolbar is reserved for sharing functionality.
		.example-box-plain
			.title__subheading
				| This advice is for
				button#showSimpleModal.btn-secondary.btn-small(type="button")
					span.screenreader This advice is for
					| England
				button.toolbar-button.a-social-print(href="javascript:window.print();", data-track="Print") Print
				button.toolbar-button.a-social-references(href="#!", data-track="References") References
				span.info-extent Extent
				span.info-reviewed Reviewed
				span.info-owner Owner
			.title__subheading--footer
				p Share this page. #[a(#) Find out more about sharing.]
				a.a-social-twitter(href="https://twitter.com/share?url=", data-track="Twitter", rel="external") Twitter
				a.a-social-facebook(href="https://www.facebook.com/sharer/sharer.php?u=", data-track="Facebook", rel="external") Facebook
				a.a-social-whatsapp.show-mobile(href="javascript:window.location='whatsapp://send?text='+encodeURIComponent(location.href);") Whatsapp
				a.a-social-messenger.show-mobile(href="") Messenger
				a.a-social-email(href="javascript:emailCurrentPage()", data-track="Email page") Email
				button.a-social-copy Copy link
					.copied Copied!
		pre
			code.language-html
				| &lt;div class="title__subheading"&gt;
				|     This advice is for &lt;button class="btn-secondary btn-small" id="showSimpleModal" type="button"&gt;
				|     &lt;span class="screenreader"&gt;This advice is for&lt;/span&gt;England&lt;/button&gt;
				|     &lt;button class="toolbar-button a-social-print" data-track="Print" href="javascript:window.print();"&gt;Print&lt;/button&gt;
				|     &lt;button class="toolbar-button a-social-references" data-track="References" href="#!"&gt;References&lt;/button&gt;
				|     &lt;span class="info-extent"&gt;Extent&lt;/span&gt;
