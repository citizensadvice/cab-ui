			var filename = document.location.pathname.match(/[^\/]+$/)[0];
			$(document).ready(function() {
				$('.section-nav a[href*="' + filename + '"]').addClass('active');

				$('#one').click(function(){
					if ($('#two').hasClass("active") || $('#three').hasClass("active") || $('#search-toggle').hasClass("active")) {
						$('#two').removeClass("active");
						$('#three').removeClass("active");
						$('#search-toggle').removeClass("active");
						$('#main-nav-beta--two').slideUp('fast');
						$('#main-nav-beta--three').slideUp('fast');
						$('#main-nav-beta--search').slideUp('fast');
						$('#main-nav-beta--one').delay(250).slideDown('fast');

					} else {
						$('#main-nav-beta--one').slideToggle('fast');
					}
					$(this).toggleClass("active");
				});

				$('#two').click(function(){
					if ($('#one').hasClass("active") || $('#three').hasClass("active") || $('#search-toggle').hasClass("active")) {
