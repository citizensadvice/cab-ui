		script.
			var filename = document.location.pathname.match(/[^\/]+$/)[0];
			$(document).ready(function() {
				$('.section-nav a[href*="' + filename + '"]').addClass('active');
			});

			$(document).ready(function($) {
				$('#get-advice').click(function(){
					$(this).toggleClass("active");
					$('#main-nav-3--dropdown').slideToggle('fast');
					$('#main-nav-3--dropdown-1').slideUp('fast');
					$('#get-involved').removeClass("active");
				});
			});

